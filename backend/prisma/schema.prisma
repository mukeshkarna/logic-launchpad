// Prisma Schema for Medium-like Blogging Platform
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User roles enum
enum UserRole {
  USER
  MODERATOR
  SUPER_ADMIN
}

// User status enum
enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
}

// User model with authentication support
model User {
  id            String      @id @default(uuid())
  email         String      @unique
  username      String      @unique
  password      String?     // Nullable for OAuth users
  fullName      String
  bio           String?     @db.Text
  avatar        String?
  googleId      String?     @unique

  // Admin fields
  role          UserRole    @default(USER)
  status        UserStatus  @default(ACTIVE)
  suspendedAt   DateTime?
  suspensionReason String?  @db.Text
  lastLoginAt   DateTime?

  // Timestamps
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  blogs         Blog[]
  comments      Comment[]
  likes         Like[]
  views         View[]
  followers     Follow[]    @relation("UserFollowers")
  following     Follow[]    @relation("UserFollowing")
  adminActions  AdminAction[]
  reports       UserReport[] @relation("ReportedByUser")
  reportedContent UserReport[] @relation("ReportedUser")
  moderationNotes ModerationNote[] @relation("ModeratorNotes")
  receivedNotes ModerationNote[] @relation("UserNotes")
  badges        UserBadge[]

  @@index([email])
  @@index([username])
  @@index([role])
  @@index([status])
  @@index([createdAt])
  @@map("users")
}

// Blog post model
model Blog {
  id            String    @id @default(uuid())
  title         String
  slug          String    @unique
  content       String    @db.Text // Rich text content in JSON format
  excerpt       String?   @db.Text
  coverImage    String?

  // Status and visibility
  status        BlogStatus @default(DRAFT)
  published     Boolean   @default(false)
  publishedAt   DateTime?

  // Admin fields
  isFeatured    Boolean   @default(false)
  isReported    Boolean   @default(false)
  reportCount   Int       @default(0)

  // SEO
  metaTitle     String?
  metaDescription String?  @db.Text

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Author relation
  authorId      String
  author        User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Relations
  comments      Comment[]
  likes         Like[]
  views         View[]
  tags          BlogTag[]
  reports       UserReport[]
  moderationNotes ModerationNote[]

  @@index([slug])
  @@index([authorId])
  @@index([status])
  @@index([publishedAt])
  @@index([isFeatured])
  @@index([isReported])
  @@map("blogs")
}

// Blog status enum
enum BlogStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// Tag model for categorizing blogs
model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique

  createdAt DateTime  @default(now())

  blogs     BlogTag[]

  @@index([slug])
  @@map("tags")
}

// Many-to-many relation between Blog and Tag
model BlogTag {
  id        String   @id @default(uuid())
  blogId    String
  tagId     String

  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([blogId, tagId])
  @@index([blogId])
  @@index([tagId])
  @@map("blog_tags")
}

// Comment model with threading support
model Comment {
  id          String    @id @default(uuid())
  content     String    @db.Text

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Author relation
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Blog relation
  blogId      String
  blog        Blog      @relation(fields: [blogId], references: [id], onDelete: Cascade)

  // Threading support
  parentId    String?
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")

  @@index([blogId])
  @@index([authorId])
  @@index([parentId])
  @@map("comments")
}

// Like model for blogs
model Like {
  id        String   @id @default(uuid())

  createdAt DateTime @default(now())

  // User relation
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Blog relation
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)

  @@unique([userId, blogId])
  @@index([blogId])
  @@index([userId])
  @@map("likes")
}

// View model for analytics
model View {
  id        String   @id @default(uuid())

  createdAt DateTime @default(now())

  // User relation (nullable for anonymous views)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Blog relation
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)

  // Track IP for anonymous users (optional)
  ipAddress String?

  @@index([blogId])
  @@index([userId])
  @@index([createdAt])
  @@map("views")
}

// Follow model for user connections
model Follow {
  id          String   @id @default(uuid())

  createdAt   DateTime @default(now())

  // Follower relation
  followerId  String
  follower    User     @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)

  // Following relation
  followingId String
  following   User     @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}
// Admin-related models - append to main schema.prisma

// Admin action audit log
model AdminAction {
  id          String   @id @default(uuid())
  action      String   // e.g., "USER_SUSPENDED", "BLOG_DELETED", "SETTINGS_UPDATED"
  targetType  String?  // "USER", "BLOG", "COMMENT", etc.
  targetId    String?
  details     String?  @db.Text
  ipAddress   String?

  createdAt   DateTime @default(now())

  adminId     String
  admin       User     @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([action])
  @@index([createdAt])
  @@map("admin_actions")
}

// User reports for flagged content
enum ReportStatus {
  PENDING
  REVIEWED
  DISMISSED
  RESOLVED
}

enum ReportType {
  SPAM
  INAPPROPRIATE
  HARASSMENT
  COPYRIGHT
  OTHER
}

model UserReport {
  id          String       @id @default(uuid())
  reason      String       @db.Text
  reportType  ReportType
  status      ReportStatus @default(PENDING)

  // Target (what is being reported)
  targetType  String       // "BLOG", "COMMENT", "USER"
  targetId    String
  blogId      String?
  blog        Blog?        @relation(fields: [blogId], references: [id], onDelete: Cascade)

  // Reporter
  reporterId  String
  reporter    User         @relation("ReportedByUser", fields: [reporterId], references: [id], onDelete: Cascade)

  // Reported user
  reportedUserId String
  reportedUser   User     @relation("ReportedUser", fields: [reportedUserId], references: [id], onDelete: Cascade)

  // Resolution
  resolvedAt  DateTime?
  resolution  String?      @db.Text

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([status])
  @@index([targetType, targetId])
  @@index([reporterId])
  @@index([createdAt])
  @@map("user_reports")
}

// Platform settings
model PlatformSettings {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String   @db.Text
  description String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("platform_settings")
}

// Badge system for achievements
enum BadgeType {
  FIRST_BLOG
  VIEWS_1K
  VIEWS_10K
  VIEWS_100K
  LIKES_100
  LIKES_1K
  TOP_BLOGGER
  CONSISTENT_PUBLISHER
  RISING_STAR
  YEAR_ANNIVERSARY
}

model Badge {
  id          String     @id @default(uuid())
  name        String     @unique
  description String     @db.Text
  badgeType   BadgeType  @unique
  icon        String?
  criteria    String     @db.Text // JSON describing criteria

  createdAt   DateTime   @default(now())

  userBadges  UserBadge[]

  @@map("badges")
}

// User badges (junction table)
model UserBadge {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  awardedAt DateTime @default(now())

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
  @@map("user_badges")
}

// Moderation notes
model ModerationNote {
  id        String   @id @default(uuid())
  note      String   @db.Text

  // Target (user or content)
  targetType String  // "USER", "BLOG", "COMMENT"
  targetId   String
  userId     String?
  user       User?   @relation("UserNotes", fields: [userId], references: [id], onDelete: Cascade)
  blogId     String?
  blog       Blog?   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  // Moderator who created the note
  moderatorId String
  moderator   User    @relation("ModeratorNotes", fields: [moderatorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([targetType, targetId])
  @@index([userId])
  @@index([moderatorId])
  @@map("moderation_notes")
}
